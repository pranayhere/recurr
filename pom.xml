<!--        <connection>scm:git:git://github.com/pranayhere/recurr.git</connection>-->
<!--        <developerConnection>scm:git:ssh://github.com:pranayhere/recurr.git</developerConnection>-->
<!--        <url>http://github.com/pranayhere/recurr/tree/master</url>-->
